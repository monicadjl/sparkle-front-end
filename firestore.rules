rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all documents
    match /{document=**} {
      allow read;
    }

    // Allow write access to the 'sparkles' collection only for authenticated users
    match /users/{userId}/sparkles/{sparkleId} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
